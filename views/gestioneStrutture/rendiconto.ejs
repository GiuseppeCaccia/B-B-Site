    <script>
      function rendicontoButton(data_rendiconto_successivo){
        var oggi = new Date();
        var data_rendiconto = data_rendiconto_successivo.split("/");
        var myDate = new Date(data_rendiconto[2], data_rendiconto[1] - 1, data_rendiconto[0]);
          if(oggi >= myDate){
            document.write('<button class="contact100-form-btn" type="submit" name="conferma" id="rifiuta">Invia Rendiconto<i class="fas fa-paper-plane"></i> </button>');
          }
          else{
            document.write('<button class="contact100-form-btn" type="submit" name="conferma" id="rifiuta" disabled>Invia Rendiconto<i class="fas fa-paper-plane"></i> </button>');
          }
      }
</script>

