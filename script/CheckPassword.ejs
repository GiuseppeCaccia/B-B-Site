<script>
    $('#password_c, #confirm_password_c').on('keyup', function () {
if ($('#password_c').val() == $('#confirm_password_c').val()) {
    $('#message_c').html('Le password coincidono').css('color', 'green');
    if ($('#password_c').val() == $('#confirm_password_c').val()) {
        $('#invio_c').prop("disabled",false);
    }
} else 
    $('#message_c').html('Le password non coincidono').css('color', 'red');
    if ($('#password_c').val() != $('#confirm_password_c').val()) {
        $('#invio_c').prop("disabled",true);
    }
});
</script>
