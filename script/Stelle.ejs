<script>
    function Stella(punteggio) {
      var star = "";

      for (i = 0; i < punteggio; i++) {
        star = "&#9733";
        document.write('<span style="color:#FFBF00">' + star + '</span>');
      }
      restanti = 5 - punteggio;
      if (restanti > 0) {
        for (i = 0; i < restanti; i++) {
          star = "&#9734";
          document.write('<span style="color:#FFBF00">' + star + '</span>');
        }
      }
      if (punteggio == undefined){
          star = "&#9734";
          document.write('<span style="color:grey">' + star + star + star + star + star + '</span>');
      }
    }
  </script>