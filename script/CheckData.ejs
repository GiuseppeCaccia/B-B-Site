<script>
    function dobValidate_c(birth) {


        var today = new Date();
        var nowyear = today.getFullYear();
        var nowmonth = today.getMonth();
        var nowday = today.getDate();
        var b = document.getElementById('data_di_nascita_c').value;

        var birth = new Date(b);

        var birthyear = birth.getFullYear();
        var birthmonth = birth.getMonth();
        var birthday = birth.getDate();

        var age = nowyear - birthyear;
        var age_month = nowmonth - birthmonth;
        var age_day = nowday - birthday;


        if (age > 100) {
            $('#message_data_c').html("Per registrarsi si devono avere meno di 100 anni").css('color', 'red');
            $('#invio_c').prop("disabled",true);
            return false;
        }
        else if ((age == 18 && age_month <= 0 && age_day <= 0) || age < 18) {
            $('#message_data_c').html("Per registrarsi si devono avere più di 18 anni").css('color', 'red');;
            $('#invio_c').prop("disabled",true);
            return false;
        }
        else{
            $('#message_data_c').html("La data inserita è valida").css('color', 'green');;
            $('#invio_c').prop("disabled",false);
        }
        if (age_month < 0 || (age_month == 0 && age_day < 0)) {
            age = parseInt(age) - 1;
        }
    }
</script>
